{
	"manifest_version" : 2,

	"name": "YouTube Windowed FullScreen",
	"description": "Watch YouTube videos in full-screen within your browser screen.",
	"version": "1.3",
	"page_action": {
		"default_icon": "icon48.png"
	},
	"permissions": [ "storage" ],
	"icons": {
		 "128": "icon128.png",
		 "16": "icon16.png",
		 "48": "icon48.png"
	},

	"content_scripts": [
    {
	"js": ["YouTube.fullbrowser.js"],
	"css": ["YouTube.fullbrowser.css"],
  "matches": ["*://www.youtube.com/*"],
	"run_at": "document_end"
    }
  ]
}
